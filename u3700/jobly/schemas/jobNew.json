{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.job.com/jobNew.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "companyHandle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    },
    "salary": {
      "type": "integer",
      "minimum": 0
    },
    "equity": {
      "type": "number",
      "maximum": 1.0
    }
  },
  "additionalProperties": false,
  "required": [
    "title",
    "companyHandle"
  ]
}
